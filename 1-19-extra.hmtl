<script>
    function check(btn, isCorrect, id, explanationText) {
        // Reset buttons in this group
        const parent = btn.parentElement;
        const buttons = parent.getElementsByClassName('btn-option');
        for (let b of buttons) {
            b.classList.remove('correct', 'wrong');
        }

        // Apply style
        if (isCorrect) {
            btn.classList.add('correct');
            // Hide explanation if correct
            const expl = document.querySelector(`#${id} .explanation`);
            expl.style.display = 'block';
            expl.style.backgroundColor = '#d4edda';
            expl.style.borderColor = '#c3e6cb';
            expl.style.color = '#155724';
            expl.innerHTML = "<strong>Correct!</strong> Great job.";
        } else {
            btn.classList.add('wrong');
            // Show explanation
            const expl = document.querySelector(`#${id} .explanation`);
            expl.style.display = 'block';
            expl.style.backgroundColor = '#fff3cd';
            expl.style.borderColor = '#ffeeba';
            expl.style.color = '#856404';
            expl.innerHTML = "<strong>Not quite.</strong> " + explanationText;
        }
    }
</script>

